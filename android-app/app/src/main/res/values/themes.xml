<resources>
  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">?colorBackground</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowBackground">?colorBackground</item>
  </style>

  <style name="AppTheme.Dark">
    <item name="colorBackground">@color/dark_background</item>
    <item name="colorSurface">@color/dark_surface</item>
    <item name="colorDialog">@color/dark_dialog</item>
    <item name="colorIcon">@color/dark_icon</item>
    <item name="colorRipple">@color/dark_ripple</item>
    <item name="colorAccent">@color/dark_accent</item>
    <item name="colorAccentLight">@color/dark_accent_light</item>
    <item name="colorAccentRipple">@color/dark_accent_ripple</item>
    <item name="colorCorrect">@color/dark_correct</item>
    <item name="colorCorrectRipple">@color/dark_correct_ripple</item>
    <item name="colorError">@color/dark_error</item>
    <item name="colorErrorRipple">@color/dark_error_ripple</item>
    <item name="colorTextPrimary">@color/dark_text_primary</item>
    <item name="colorTextSecondary">@color/dark_text_secondary</item>
    <item name="colorPasswordWeak">@color/dark_password_weak</item>
    <item name="colorPasswordMedium">@color/dark_password_medium</item>
    <item name="colorPasswordStrong">@color/dark_password_strong</item>
    <item name="colorPasswordVeryStrong">@color/dark_password_very_strong</item>
    <item name="colorDisabled">@color/dark_disabled</item>
    <item name="colorDivider">@color/dark_divider</item>
    <item name="colorShadow">@color/dark_shadow</item>
  </style>
</resources>